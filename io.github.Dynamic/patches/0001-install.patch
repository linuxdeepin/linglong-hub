 Dynamic.desktop |  9 +++++++++
 Dynamic.pro     | 11 ++++++++++-
 2 files changed, 19 insertions(+), 1 deletion(-)
 create mode 100644 Dynamic.desktop

diff --git a/Dynamic.desktop b/Dynamic.desktop
new file mode 100644
index 0000000..5d73f65
--- /dev/null
+++ b/Dynamic.desktop
@@ -0,0 +1,9 @@
+[Desktop Entry]
+Categories=Game;Qt;
+Exec=Dynamic
+Name=Dynamic
+Icon=MAIN
+StartupNotify=false
+Terminal=false
+Type=Application
+X-Deepin-Vendor=user-custom
\ No newline at end of file
diff --git a/Dynamic.pro b/Dynamic.pro
index a4c9805..18380a3 100644
--- a/Dynamic.pro
+++ b/Dynamic.pro
@@ -18,8 +18,17 @@ FORMS += \
     dynamicwindow.ui
 
 qnx: target.path = /tmp/$${TARGET}/bin
-else: unix:!android: target.path = /opt/$${TARGET}/bin
+else: unix:!android: #target.path = /opt/$${TARGET}/bin
 !isEmpty(target.path): INSTALLS += target
 
 RESOURCES += \
     IMG.qrc
+
+BINDIR = $$PREFIX/bin
+DATADIR = $$PREFIX/share
+target.path = $$BINDIR
+desktop.files =Dynamic.desktop
+desktop.path = $$DATADIR/applications/
+icons.files = Image/MAIN.ico
+icons.path = $$PREFIX/share/icons
+INSTALLS += target desktop icons
\ No newline at end of file
